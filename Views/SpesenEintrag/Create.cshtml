@model SpesenApp.Models.ViewModels.SpesenEintragCreateViewModel

@{
    ViewData["Title"] = "Speseneintrag erfassen";
}

<a asp-controller="SpesenEintrag" asp-action="Index" asp-route-personId="@Model.PersonenId" class="return-button">
    <span class="material-icons">arrow_back</span>
</a>

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post" class="spesen-form">
    <input type="hidden" asp-for="PersonenId" />

    <div class="form-group">
        <label asp-for="Datum"></label>
        <input asp-for="Datum" type="date" class="form-control" />
        <span asp-validation-for="Datum" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Beschreibung"></label>
        <textarea asp-for="Beschreibung" class="form-control"></textarea>
        <span asp-validation-for="Beschreibung" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Kst1"></label>
        <select asp-for="Kst1" asp-items="Model.Kst1Optionen" class="form-control"></select>
        <span asp-validation-for="Kst1" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Kst2"></label>
        <input asp-for="Kst2" type="number" class="form-control" />
        <span asp-validation-for="Kst2" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Verpflegung"></label>
        <input asp-for="Verpflegung" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Verpflegung" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Reisekosten"></label>
        <input asp-for="Reisekosten" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Reisekosten" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="KmAuto"></label>
        <input asp-for="KmAuto" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="KmAuto" class="text-danger"></span>
    </div>

    <div class="form-group calculated">
        <label asp-for="ReisespesenAuto"></label>
        <input id="ReisespesenAuto" value="@Model.ReisespesenAuto.ToString("F2")" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Kursmaterial"></label>
        <input asp-for="Kursmaterial" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Kursmaterial" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AndereKosten"></label>
        <input asp-for="AndereKosten" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="AndereKosten" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Speichern</button>
</form>

@section Scripts {
    <script src="~/js/spesen-form.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@section Styles {
    <link rel="stylesheet" href="~/Views/SpesenEintrag/Create.cshtml.css" />
}
